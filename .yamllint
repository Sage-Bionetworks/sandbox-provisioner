---

extends: default

rules:
  braces:
    level: warning
    max-spaces-inside: 1
  brackets:
    level: warning
    max-spaces-inside: 1
  commas:
    level: warning
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    level: warning
  hyphens:
    level: warning
  indentation:
    level: warning
    indent-sequences: consistent
  line-length: disable
  quoted-strings:
    ignore: |
      .yamllint
      .pre-commit-config.yaml
      .travis.yml
      config/config.yaml
      templates/
  truthy: disable
  new-line-at-end-of-file:
    level: warning
